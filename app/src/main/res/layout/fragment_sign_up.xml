<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coppermobile.form.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/name_and_image_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/first_name_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

                    <EditText
                        android:id="@+id/first_name_sign_up_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:hint="@string/first_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/middle_name_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

                    <EditText
                        android:id="@+id/middle_name_sign_up_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:hint="@string/middle_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/last_name_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

                    <EditText
                        android:id="@+id/last_name_sign_up_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="@string/last_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/new_user_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_rounded"
                android:padding="10dp"
                android:src="@drawable/add_user_image" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/name_and_image_linear_layout"
            android:layout_below="@id/name_and_image_linear_layout"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:imeOptions="actionNext"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/email_sign_up_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/name_and_image_linear_layout"
            android:layout_below="@id/email_sign_up"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/password_sign_up_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirm_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/email_sign_up"
            android:layout_alignStart="@id/password_sign_up"
            android:layout_below="@id/password_sign_up"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/confirm_password_sign_up_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/confirm_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/email_sign_up"
            android:layout_alignStart="@id/password_sign_up"
            android:layout_below="@id/confirm_password_sign_up"
            android:imeOptions="actionNext"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/phone_number_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/sign_up_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded"
            android:text="Submit"
            android:textColor="#000000" />

    </RelativeLayout>
</ScrollView>
