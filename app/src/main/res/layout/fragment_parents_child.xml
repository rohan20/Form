<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FormChildFragments.ParentsChildFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Father-->

        <TextView
            android:id="@+id/father_details_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="@string/father_s_details"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_details_text_view"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/father_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/father_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_name"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/father_email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/father_qualification_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/father_email"
            android:layout_below="@id/father_email"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="@string/qualification"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


        <com.roughike.swipeselector.SwipeSelector
            android:id="@+id/father_qualification_swipe_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_qualification_text_view"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:swipe_descriptionTextAppearance="@style/swipeSelectorText"
            app:swipe_titleTextAppearance="@style/swipeSelectorText" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/father_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_qualification_swipe_selector"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/father_occupation_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/occupation"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/father_annual_income_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/father_email"
            android:layout_below="@id/father_occupation"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="@string/annual_income_in_rupees"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <com.roughike.swipeselector.SwipeSelector
            android:id="@+id/father_annual_income_swipe_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_annual_income_text_view"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:swipe_titleTextAppearance="@style/swipeSelectorText" />

        <!--Mother-->

        <TextView
            android:id="@+id/mother_details_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/father_annual_income_swipe_selector"
            android:background="@android:color/black"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="@string/mother_s_details"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/mother_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mother_details_text_view"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/mother_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/mother_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mother_name"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/mother_email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/mother_qualification_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/father_email"
            android:layout_below="@id/mother_email"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="@string/qualification"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


        <com.roughike.swipeselector.SwipeSelector
            android:id="@+id/mother_qualification_swipe_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mother_qualification_text_view"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:swipe_descriptionTextAppearance="@style/swipeSelectorText"
            app:swipe_titleTextAppearance="@style/swipeSelectorText" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/mother_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mother_qualification_swipe_selector"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/mother_occupation_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/occupation"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/mother_annual_income_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/father_email"
            android:layout_below="@id/mother_occupation"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="@string/annual_income_in_rupees"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <com.roughike.swipeselector.SwipeSelector
            android:id="@+id/mother_annual_income_swipe_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mother_annual_income_text_view"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:swipe_titleTextAppearance="@style/swipeSelectorText" />

        <!--Other Details-->

        <TextView
            android:id="@+id/home_details_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mother_annual_income_swipe_selector"
            android:background="@android:color/black"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="@string/permanent_residence_details"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_details_text_view"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/home_address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/address"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/home_locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_address"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/home_locality_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/locality"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/home_city_town_village"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_locality"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/home_city_town_village_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/city_town_village"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/home_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_city_town_village"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <AutoCompleteTextView
                android:id="@+id/home_state_autocomplete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/state"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/home_pin_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_state"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/home_pin_code_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/pin_code"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/home_landline_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_pin_code"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:imeOptions="actionNext"
            android:textColorHint="#000000"
            app:hintTextAppearance="@style/MaterialEditTextFloatingLabel">

            <EditText
                android:id="@+id/home_landline_number_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/number_with_std_code"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/parents_tab_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_landline_number"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_rounded"
            android:text="@string/save"
            android:textColor="#000000" />


    </RelativeLayout>

</ScrollView>
